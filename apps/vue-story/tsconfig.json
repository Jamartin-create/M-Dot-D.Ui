{
  "compilerOptions": {
    "outDir": "es",
    "target": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "lib": [
      "ES2020",
      "dom"
    ],
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.vue",
    "global.d.ts",
    "./**/*.mdx",
    "./**/*.tsx"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
